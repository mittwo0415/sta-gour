<div class="row mt-4">
  <div class="col-md-6 offset-md-3">
    <div class="card">
      <div class="card-body">
        <h2 class="d-flex justify-content-center">名前の変更</h2>

        <%= form_with model: @user do |f| %>
          <div class="mb-2">
            <%= f.label :name, "名前" %>
            <%= f.text_field :name, class: "form-control" %>
          </div>
          <%= f.submit "編集", class: "btn btn-primary my-4 btn-block" %>
        <% end %>
      </div>
    </div>
    <%= link_to "退会する", user_path(@user), method: :delete, data: { confirm: "本当に削除しますか？" }, class: "btn btn-danger mt-4" %>
  </div>
</div>